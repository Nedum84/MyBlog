<html>
    <%- include('../partials/header.ejs') %>
    <body>
        <%- include('../partials/nav.ejs') %>

        <%
        const name = 'Index Page ooo';
        %>
        <h1>Welcome to Nelly Blog</h1>
        <p><%= name %></p>

        <br>
        <%  if(blogs.length>0){  %>
            <% blogs.forEach(blog=>{ %>
                <h2> <%= blog.title %></h2>
                <h3>Category: <%= blog.category %> </h3>
                <p> <%= blog.body %></p>
            <% }); %>
        <% }else{ %>
            <h4>
                No  blog at the moment...
            </h4>
        <% } %>


        <%- include('../partials/footer.ejs') %>
    </body>
</html>